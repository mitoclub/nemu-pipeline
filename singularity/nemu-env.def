    yum -y groupinstall "Development Tools"
    yum -y install openssl-devel bzip2-devel libffi-devel sqlite-devel
    yum -y install epel-release
    yum -y install R

    echo 'Installing Python!'
    cd /opt
    tar -xvf Python-$PYTHON_VERSION.tgz
    cd Python-3.8*/
